<Window x:Class="CalculadoraTinta.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraTinta"
        mc:Ignorable="d"
        Title="Calculadora" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <InkCanvas Name="canvasTinta"></InkCanvas>

        <TextBox Grid.Row="1" Name="textBox" Height="200"
                 VerticalScrollBarVisibility="Visible">
        </TextBox>

        <Button Grid.Row="2" Name="Borrar" Click="Borrar_Click">Borrar</Button>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <RadioButton Name="Modo1" IsChecked="True" Checked="Modo1_Checked">Modo 1</RadioButton>
            <RadioButton Name="Modo2" Checked="Modo2_Checked">Modo 2</RadioButton>
        </StackPanel>

    </Grid>
</Window>
